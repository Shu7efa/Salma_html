        function setNewYearMessage() {
            const receiverName = "SALMA SACHE _THE QUEEN ‚ù§Ô∏è";
            document.getElementById('receiverName').innerText = receiverName;

            const thoughts = [
                "May the new year bring you blessings and guidance from Allah.",
